{
  "name": "jwt-bearer-oauth2-action",
  "version": "1.0.0",
  "description": "A GitHub Action used to request an access tokens from an external OAuth 2.0 server that supports the jwt-bearer grant type authenticated to with a GitHub OIDC token.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "bundle": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run test && npm run bundle"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/http-client": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.0",
    "@vercel/ncc": "^0.38.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "oauth2",
    "jwt"
  ],
  "author": "UnitVectorY Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/UnitVectorY-Labs/jwt-bearer-token-vendor.git"
  },
  "bugs": {
    "url": "https://github.com/UnitVectorY-Labs/jwt-bearer-token-vendor/issues"
  },
  "homepage": "https://github.com/UnitVectorY-Labs/jwt-bearer-token-vendor"
}
