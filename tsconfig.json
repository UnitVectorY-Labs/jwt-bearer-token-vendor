{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "pretty": true,
    "newLine": "lf",
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "__tests__", "coverage", "lib"]
}
